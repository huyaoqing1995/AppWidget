<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".main.WidgetConfigActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:scaleType="centerCrop"
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:background="#4D000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatEditText
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/bg_edit_text"
            android:layout_margin="20dp"
            android:hint="Search Widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="20dp"
                    android:textColor="#fafafa"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="Application shortcut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:minHeight="100dp"
                    android:id="@+id/rcv_application"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/bt_see_all_app"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:layout_marginStart="20dp"
                    android:textColor="#fafafa"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="See all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/bt_analog_clock"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="#000000"
                            app:cardCornerRadius="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
<!--                            <AnalogClock-->
<!--                                android:layout_margin="20dp"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"/>-->
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textColor="#fafafa"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:text="Analog Clock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bt_text_clock"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="#000000"
                            app:cardCornerRadius="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
<!--                            <TextClock-->
<!--                                android:shadowColor="#000000"-->
<!--                                android:shadowDx="1"-->
<!--                                android:shadowDy="1"-->
<!--                                android:shadowRadius="2"-->
<!--                                android:textSize="20sp"-->
<!--                                android:gravity="center"-->
<!--                                android:format24Hour="HH:mm:ss a"-->
<!--                                android:format12Hour="HH:mm:ss a"-->
<!--                                android:textColor="#fafafa"-->
<!--                                android:textStyle="bold"-->
<!--                                android:tint="#fafafa"-->
<!--                                android:layout_margin="10dp"-->
<!--                                android:src="@drawable/ic_contact"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"/>-->
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textColor="#fafafa"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:text="Text Clock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/bt_date_widget"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="#000000"
                            app:cardCornerRadius="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
<!--                            <TextClock-->
<!--                                android:shadowColor="#000000"-->
<!--                                android:shadowDx="1"-->
<!--                                android:shadowDy="1"-->
<!--                                android:shadowRadius="2"-->
<!--                                android:textSize="20sp"-->
<!--                                android:gravity="center"-->
<!--                                android:format24Hour="d MMM yyyy"-->
<!--                                android:format12Hour="d MMM yyyy"-->
<!--                                android:textColor="#fafafa"-->
<!--                                android:textStyle="bold"-->
<!--                                android:tint="#fafafa"-->
<!--                                android:layout_margin="10dp"-->
<!--                                android:src="@drawable/ic_contact"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"/>-->
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textColor="#fafafa"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:text="Date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bt_flashlight_widget"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="#4296FE"
                            app:cardCornerRadius="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
                            <ImageView
                                android:src="@drawable/ic_flashlight"
                                android:layout_margin="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textColor="#fafafa"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:text="Flashlight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/bt_photo"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="#43A047"
                            app:cardCornerRadius="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
                            <ImageView
                                android:src="@drawable/ic_photo"
                                android:layout_margin="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textColor="#fafafa"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:text="Photo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bt_contact_widget"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="#5E35B1"
                            app:cardCornerRadius="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
                            <ImageView
                                android:src="@drawable/ic_contact"
                                android:layout_margin="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textColor="#fafafa"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:text="Contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/bt_battery"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="#43A047"
                            app:cardCornerRadius="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
                            <ImageView
                                android:src="@drawable/ic_battery"
                                android:layout_margin="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textColor="#fafafa"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:text="Battery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="#5E35B1"
                            app:cardCornerRadius="15dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
                            <ImageView
                                android:src="@drawable/ic_contact"
                                android:layout_margin="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textColor="#fafafa"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:text="Contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>