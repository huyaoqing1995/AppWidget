<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fafafa"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">
    <androidx.appcompat.widget.AppCompatImageView
        android:background="@color/colorPrimary"
        android:id="@+id/bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/top"
        android:background="#4D000000"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_back"
            android:padding="15dp"
            android:tint="#fafafa"
            android:src="@drawable/ic_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fafafa"
            android:text="Flashlight Widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/preview"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_flash_off"
                    android:background="@drawable/bg_flashlight_off"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:tint="#9A9A9A"
                    android:padding="10dp"
                    android:src="@drawable/ic_flashlight"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_marginStart="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_flash_on"
                    android:background="@drawable/bg_flashlight_on"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:tint="#FFFFFF"
                    android:padding="10dp"
                    android:src="@drawable/ic_flashlight"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:background="#4D000000"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/preview"
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Transparency of the background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_background_alpha"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#fafafa"
                        android:padding="10dp"
                        android:text="100%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <SeekBar
                        android:id="@+id/sb_background_alpha"
                        android:progressTint="#fafafa"
                        android:progress="0"
                        android:max="100"
                        android:progressBackgroundTint="#fafafa"
                        android:thumbTint="#fafafa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="0.5dp"
        android:id="@+id/bottom"
        android:background="#4D000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/bt_add_widget"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true">
            <TextView
                android:textSize="16sp"
                android:textColor="#fafafa"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Add Widget"
                android:background="#43A047"
                android:layout_width="wrap_content"
                android:layout_height="45dp"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>