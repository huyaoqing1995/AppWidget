<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fafafa"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">
    <androidx.appcompat.widget.AppCompatImageView
        android:background="@color/colorPrimary"
        android:id="@+id/bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/top"
        android:background="#4D000000"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_back"
            android:padding="15dp"
            android:tint="#fafafa"
            android:src="@drawable/ic_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fafafa"
            android:text="Photo Widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/preview"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <FrameLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.osapp.appwidget.shapeView.ShapeOfView
                android:layout_gravity="center"
                android:id="@+id/shape_view"
                app:src_image="@drawable/ava_shape_1"
                android:layout_width="180dp"
                android:layout_height="180dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="#E30000"
                    android:id="@+id/img_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <com.osapp.appwidget.shapeView.ShapeOfView
                    android:layout_gravity="center"
                    android:id="@+id/shape_border"
                    app:src_image="@drawable/ava_border_1"
                    android:layout_width="180dp"
                    android:layout_height="180dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_border"
                        android:src="#fafafa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.osapp.appwidget.shapeView.ShapeOfView>
            </com.osapp.appwidget.shapeView.ShapeOfView>
        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:background="#4D000000"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/preview"
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bt_add_photo"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#fafafa"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="Add photo"
                            android:background="#1E88E5"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="20dp"
                        android:id="@+id/bt_change_border_color"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#fafafa"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="Border color"
                            android:background="#1E88E5"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <TextView
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_shape"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Image scale type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/tv_scale_type"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Center Crop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="0.5dp"
        android:id="@+id/bottom"
        android:background="#4D000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/bt_add_widget"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true">
            <TextView
                android:textSize="16sp"
                android:textColor="#fafafa"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Add Widget"
                android:background="#43A047"
                android:layout_width="wrap_content"
                android:layout_height="45dp"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>