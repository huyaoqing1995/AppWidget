<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fafafa"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">
    <androidx.appcompat.widget.AppCompatImageView
        android:background="@color/colorPrimary"
        android:id="@+id/bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/top"
        android:background="#4D000000"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_back"
            android:padding="15dp"
            android:tint="#fafafa"
            android:src="@drawable/ic_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fafafa"
            android:text="App Shortcut Widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/preview"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.osapp.appwidget.shapeView.ShapeOfView
                android:id="@+id/shape_view"
                app:src_image="@mipmap/ic_launcher"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_app"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.osapp.appwidget.shapeView.ShapeOfView>
            <TextView
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:elevation="1dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:lines="1"
                android:padding="3dp"
                android:id="@+id/tv_app_name"
                android:text="App widget"
                android:textColor="#ffffff"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:background="#4D000000"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/preview"
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bt_change_icon"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#fafafa"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="Change icon"
                            android:background="#1E88E5"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bt_change_name"
                        android:layout_marginStart="20dp"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#fafafa"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="Change name"
                            android:background="#1E88E5"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <TextView
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/tv_action"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Open AppWidget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Icon padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_padding"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#fafafa"
                        android:padding="10dp"
                        android:text="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <SeekBar
                        android:id="@+id/sb_padding"
                        android:progressTint="#fafafa"
                        android:progress="10"
                        android:max="20"
                        android:progressBackgroundTint="#fafafa"
                        android:thumbTint="#fafafa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Text size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_text_size"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#fafafa"
                        android:padding="10dp"
                        android:text="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <SeekBar
                        android:id="@+id/sb_text_size"
                        android:progressTint="#fafafa"
                        android:progress="10"
                        android:max="20"
                        android:progressBackgroundTint="#fafafa"
                        android:thumbTint="#fafafa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:textColor="#fafafa"
                    android:padding="10dp"
                    android:text="Line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/cb_single_line"
                        android:checked="true"
                        android:text="Single line"
                        android:theme="@style/Theme.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/cb_double_line"
                        android:text="Double line"
                        android:theme="@style/Theme.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="0.5dp"
        android:id="@+id/bottom"
        android:background="#4D000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/bt_add_widget"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true">
            <TextView
                android:textSize="16sp"
                android:textColor="#fafafa"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Add Widget"
                android:background="#43A047"
                android:layout_width="wrap_content"
                android:layout_height="45dp"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>