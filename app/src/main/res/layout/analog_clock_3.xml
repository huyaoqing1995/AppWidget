<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/bg_radius_clock3"
        android:id="@+id/bg_clock"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <AnalogClock
        android:hand_minute="@drawable/analog_clock_minute_hand_3_max"
        android:hand_hour="@drawable/analog_clock_hour_hand_3_max"
        android:dial="@drawable/analog_clock_dial_3_max"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>